---
const links = [
  { href: "/", label: "Home" },
  { href: "/projects", label: "Projects" },
  { href: "/resume", label: "Resume" },
  { href: "/contact", label: "Contact" },
];
const current = Astro.url.pathname.replace(/\/+$/, "") || "/";
---
<nav class="flex items-center gap-6 h-14">
  <a href="/" class="font-semibold">Santiago Quiroga</a>
  <div class="ml-auto flex gap-4 text-sm">
    {links.map(l => (
      <a href={l.href} class={`hover:underline ${current===l.href ? "font-semibold" : ""}`}>{l.label}</a>
    ))}
  </div>
</nav>

---
const { post, idx } = Astro.props;
---
<>
  {idx !== 0 && <hr class="border-[var(--border)] my-8" />}
  <a href={`/blog/${post.id}`} class="block group no-underline">
    <article class="transition-shadow hover:shadow-lg p-0">
      <h2 class="text-2xl font-bold mb-2 group-hover:underline text-[var(--accent)]">{post.data.title}</h2>
      {post.data.description && <p class="text-[var(--muted)] mb-2">{post.data.description}</p>}
      <div class="flex items-center text-sm text-[var(--muted)] mb-2">
        <span class="mr-2">🗓️ {post.data.date}</span>
  {post.data.tags && post.data.tags.map((tag: string) => (
          <span class="tag ml-2">#{tag}</span>
        ))}
      </div>
    </article>
  </a>
</>

---
import Base from "../layouts/Base.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
---
<Base title="Resume — Santiago Quiroga" description="Experience, education, and skills.">
  <Fragment slot="nav"><Navbar/></Fragment>

  <h1 class="text-3xl md:text-4xl font-bold mb-6">Resume</h1>

  <section class="space-y-6">
    <div>
      <h2 class="text-lg font-semibold">Education</h2>
      <ul class="list-disc pl-5 text-zinc-700 mt-2">
        <li>CU Boulder — IDE (Mech) + CS minor — YYYY–Present</li>
      </ul>
    </div>

    <div>
      <h2 class="text-lg font-semibold">Experience</h2>
      <ul class="list-disc pl-5 text-zinc-700 mt-2">
        <li>Role @ Company — brief impact bullet</li>
      </ul>
    </div>

    <div>
      <h2 class="text-lg font-semibold">Skills</h2>
      <p class="text-zinc-700 mt-2">C, C++, Python, R, Tailwind, Astro…</p>
    </div>

    <!-- Optional: link to a PDF hosted in /public -->
    <a class="underline text-sm" href="/resume.pdf">Download PDF</a>
  </section>

  <Fragment slot="footer"><Footer/></Fragment>
</Base>

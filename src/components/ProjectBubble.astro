---
const { title, description, link, image } = Astro.props;
---

<div class="rounded-lg p-4 flex flex-col items-center hover:scale-105 transition-transform
  bg-[var(--surface)]
  border border-[var(--border)]
  shadow-md">
  {image && <img src={image} alt={title} class="w-24 h-24 object-cover rounded-full mb-2" />}
  <h2 class="text-xl font-bold mb-1 text-[var(--accent)]">{title}</h2>
  <p class="mb-2 text-center text-[var(--muted)]">{description}</p>
  {link && (
    <a href={link} target="_blank" rel="noopener" class="text-[var(--accent)] hover:underline">
      View Project
    </a>
  )}
</div>
